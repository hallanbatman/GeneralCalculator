<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:padding="8dp"
        android:text=""
        android:textColor="#888888"
        android:textSize="24dp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="48dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btn_clear"
        app:layout_constraintEnd_toEndOf="@+id/btn_divide" />

    <Button
        android:id="@+id/btn_clear"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="C"
        android:textSize="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="300dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_plus_minus"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="+/-"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_eight"
        app:layout_constraintEnd_toStartOf="@+id/btn_percentage"
        app:layout_constraintStart_toEndOf="@+id/btn_clear" />

    <Button
        android:id="@+id/btn_percentage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="%"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_clear"
        app:layout_constraintTop_toTopOf="@+id/btn_plus_minus" />

    <Button
        android:id="@+id/btn_divide"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginHorizontal="16dp"
        android:text="÷"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/btn_percentage"
        app:layout_constraintTop_toTopOf="@+id/btn_percentage" />

    <Button
        android:id="@+id/btn_multiply"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="×"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_divide"
        app:layout_constraintStart_toStartOf="@+id/btn_divide"
        app:layout_constraintTop_toBottomOf="@+id/btn_divide" />

    <Button
        android:id="@+id/btn_subtrack"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="-"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_multiply"
        app:layout_constraintStart_toStartOf="@+id/btn_multiply"
        app:layout_constraintTop_toBottomOf="@+id/btn_multiply" />

    <Button
        android:id="@+id/btn_adition"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="+"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_subtrack"
        app:layout_constraintStart_toStartOf="@+id/btn_subtrack"
        app:layout_constraintTop_toBottomOf="@+id/btn_subtrack" />

    <Button
        android:id="@+id/btn_equal"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="="
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_adition"
        app:layout_constraintStart_toStartOf="@+id/btn_adition"
        app:layout_constraintTop_toBottomOf="@+id/btn_adition" />

    <Button
        android:id="@+id/btn_seven"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="7"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_clear"
        app:layout_constraintStart_toStartOf="@+id/btn_clear"
        app:layout_constraintTop_toBottomOf="@+id/btn_clear" />

    <Button
        android:id="@+id/btn_eight"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="8"
        android:textSize="20dp"
        app:layout_constraintEnd_toStartOf="@+id/btn_percentage"
        app:layout_constraintStart_toEndOf="@+id/btn_seven"
        app:layout_constraintTop_toBottomOf="@+id/btn_clear" />

    <Button
        android:id="@+id/btn_nine"
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:text="9"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_percentage"
        app:layout_constraintStart_toStartOf="@+id/btn_percentage"
        app:layout_constraintTop_toBottomOf="@+id/btn_percentage" />

    <Button
        android:id="@+id/btn_four"
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:text="4"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_seven"
        app:layout_constraintStart_toStartOf="@+id/btn_seven"
        app:layout_constraintTop_toBottomOf="@+id/btn_seven" />

    <Button
        android:id="@+id/btn_five"
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:text="5"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_eight"
        app:layout_constraintStart_toStartOf="@+id/btn_eight"
        app:layout_constraintTop_toBottomOf="@+id/btn_eight" />

    <Button
        android:id="@+id/btn_six"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="6"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_nine"
        app:layout_constraintStart_toStartOf="@+id/btn_nine"
        app:layout_constraintTop_toBottomOf="@+id/btn_nine" />

    <Button
        android:id="@+id/btn_one"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="1"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_four"
        app:layout_constraintStart_toStartOf="@+id/btn_four"
        app:layout_constraintTop_toBottomOf="@+id/btn_four" />

    <Button
        android:id="@+id/btn_two"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="2"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_five"
        app:layout_constraintStart_toStartOf="@+id/btn_five"
        app:layout_constraintTop_toBottomOf="@+id/btn_five" />

    <Button
        android:id="@+id/btn_three"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="3"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_six"
        app:layout_constraintStart_toStartOf="@+id/btn_six"
        app:layout_constraintTop_toBottomOf="@+id/btn_six" />

    <Button
        android:id="@+id/btn_zero"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="0"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_two"
        app:layout_constraintStart_toStartOf="@+id/btn_two"
        app:layout_constraintTop_toBottomOf="@+id/btn_two" />

    <Button
        android:id="@+id/btn_dot"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="."
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_one"
        app:layout_constraintStart_toStartOf="@+id/btn_one"
        app:layout_constraintTop_toBottomOf="@+id/btn_one" />

    <Button
        android:id="@+id/btn_backspace"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="⌫"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_three"
        app:layout_constraintStart_toStartOf="@+id/btn_three"
        app:layout_constraintTop_toBottomOf="@+id/btn_three" />


</androidx.constraintlayout.widget.ConstraintLayout>